@using FunWithFiles.Models
@model FileViewModel

@{
    ViewData["Title"] = "View File Data As Xml";
}

<div>
    <h1>
        @Model.FileHeader.FileName
    </h1>
    </br>
    </br>
@Html.Partial("~/Views/Home/_ViewFileAs.cshtml", Model)
    </br>
    </br>
    </br>
    </br>
    <table style="width:100%">
        <div>
            </br>
            </br>
            <div>@Model.FileHeader.ColumnsXml</div>
            </br>
        </div>
        </br>


        @foreach (FileDataRowViewModel row in @Model.DataRowsXml)
        {
            <div>
                <div>RowNumber: @row.RowIndex</div>
                @foreach (string column in @row.ColumnDataList)
                {
                    <div>@column</div>
                }
            </div>
        }
    </table>
</div>